{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@functions/*": ["functions/*"],
      "@middleware/*": ["middleware/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@coreTypes/*": ["types/*"],
      "@mock/*": ["mock/*"],
      "@utils/*": ["utils/*"],
      "@error/*": ["error/*"],
      "@db/*": ["db/*"],
      "@tests/*": ["tests/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "coverage"]
}
